source 'https://rubygems.org'
gem 'cocoapods'                 # third party iOS libraries manager
gem 'pivotal_git_scripts'       # for git pair, which configures git authors when pair programming.
gem 'rake'                      # make sure Xcode Bots use the same version of rake
gem 'cocoapods-podfile_info'    # pod podfile-info shows list of used pods with description